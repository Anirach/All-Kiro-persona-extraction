# Environment Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="file:./dev.db"

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Frontend
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# Security (generate secure values for production)
JWT_SECRET=your_jwt_secret_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Evidence Processing
MAX_EVIDENCE_UNITS_PER_SOURCE=1000
QUALITY_SCORE_THRESHOLD=0.4

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000
LLM_TIMEOUT_MS=30000

# Confidence Scoring Weights (must sum to 1.0)
CONFIDENCE_WEIGHT_AGREEMENT=0.4
CONFIDENCE_WEIGHT_COUNT=0.3
CONFIDENCE_WEIGHT_QUALITY=0.2
CONFIDENCE_WEIGHT_RECENCY=0.1

# Quality Scoring Weights (must sum to 1.0)
QUALITY_WEIGHT_AUTHORITY=0.3
QUALITY_WEIGHT_CONTENT=0.25
QUALITY_WEIGHT_RECENCY=0.2
QUALITY_WEIGHT_CORROBORATION=0.15
QUALITY_WEIGHT_RELEVANCE=0.1
